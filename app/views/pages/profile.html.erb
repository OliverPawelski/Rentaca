<% if current_user %>
  <div style="text-align: center; padding-top: 7em">
    <img src="../assets/logo2.png" alt="..." class="rounded-circle" style="width: 100px; height: 100px; display: inline-block; vertical-align: middle;">
    <h2 style="color: black; display: inline-block; vertical-align: middle;">Welcome <%= current_user.first_name %></h2>
  </div>
<% end %>

<div style="text-align: center;">
  <%= link_to "Edit Profile",  edit_user_registration_path, style: "display: inline-block; margin: 10px; width: 150px; text-align: center; background-color: black; color: #fff; padding: 10px; text-decoration: none; border-radius: 5px;" %>
<%# <%= link_to "View my cars", user_cars_path, style: "display: inline-block; margin: 10px; width: 150px; text-align: center; background-color: black; color: #fff; padding: 10px; text-decoration: none; border-radius: 5px;" %>

  <%= link_to "Create a car", new_car_path, style: "display: inline-block; margin: 10px; width: 150px; text-align: center; background-color: black; color: #fff; padding: 10px; text-decoration: none; border-radius: 5px;" %>
</div>



<div class="container justify-content-center text-center mt-5" style="max-width: 800px;">
  <h1 class="pt-5">Current Vehicles</h1>
</div>
  <div class="container" style="width: 100%; height: 100%;">

    <div class="product" style="width: 610px; height: 250px; display: flex; margin: 1em 0; border-radius: 5px; overflow: hidden; cursor: pointer; transition: all .1s ease-in-out;">

      <div class="img-container" style="flex: 2;">
        <img src="../assets/car2.jpg" style="object-fit: cover; width: 100%; height: 100%;">
      </div>

      <div class="product-info" style="background: #fff; flex: 3;">

        <div class="product-content d-flex flex-column justify-content-between h-100" style="padding: .2em 0 .2em 1em;">
        <div>
          <h1 style="font-size: 1.5em;">Car Name</h1>
          <h2 style="font-size: 1em;">Car Color</h2>
          <h1 style="font-size: 1em;">Car Location</h1>
          <h1 style="font-size: 1em;">Car registration_number</h1>
        </div>
          <div class="buttons d-flex justify-content-end p-3" style="padding-top: .4em;">


            <span class="button" id="price" >$59,99</span>

          </div>

        </div>

      </div>

    </div>

  </div>
<div class="container justify-content-center text-center mt-5" style="max-width: 800px;">
  <h1 class="pt-5">Past Vehicles</h1>
</div>
