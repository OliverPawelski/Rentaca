<div class="container justify-content-center text-center mt-5" style="max-width: 800px;">
  <h1 class="pt-5">The Vehicles</h1>

  <%= form_with(url: cars_path, method: "get", class: "mt-3") do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search by car name" %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-dark" %>
      </div>
    </div>
  <% end %>
</div>
  <div class="container" style="width: 100%; height: 100%;">

    <div class="product" style="width: 610px; height: 250px; display: flex; margin: 1em 0; border-radius: 5px; overflow: hidden; cursor: pointer; transition: all .1s ease-in-out;">

      <div class="img-container" style="flex: 2;">
        <img src="../assets/car2.jpg" style="object-fit: cover; width: 100%; height: 100%;">
      </div>

      <div class="product-info" style="background: #fff; flex: 3;">

        <div class="product-content d-flex flex-column justify-content-between h-100" style="padding: .2em 0 .2em 1em;">
        <div>
          <h1 style="font-size: 1.5em;">Car Name</h1>
          <h2 style="font-size: 1em;">Car color</h2>
          <h1 style="font-size: 1em;">Car Location</h1>
          <h1 style="font-size: 1em;">Car registration_number</h1>
        </div>
          <div class="buttons d-flex justify-content-end p-3" style="padding-top: .4em;">


            <span class="button" id="price" >$59,99</span>

          </div>

        </div>

      </div>

    </div>

  </div>


<% @cars.each do |car| %>
<ul class>
  <h3><%= car.name %></h3>
  <li> <%= car.colour %> </li>
  <li> <%= car.price_per_day %> </li>
  <li> <%= car.location %> </li>
  <li> <%= car.registration_number %> </li>
  <%= link_to "Book this car", new_booking_path(car_id: car.id) %>

  </ul>
    <% end %>




