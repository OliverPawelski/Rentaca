<div class="container justify-content-center text-center mt-5" style="max-width: 800px;">
  <h1 class="pt-5">The Vehicles</h1>

  <%= form_with(url: cars_path, method: "get", class: "mt-3") do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search by car name" %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= form_with(url: search_cars_path, method: "get", class: "mt-3") do %>
    <div class="input-group mb-3">
      <%= text_field_tag :id, params[:id], class: "form-control", placeholder: "Search by car ID" %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <ul>
    <% @cars.each do |car| %>
      <h3><%= car.name %></h3>
      <li><%= car.colour %></li>
      <li><%= car.price_per_day %></li>
      <li><%= car.location %></li>
      <li><%= car.registration_number %></li>
      <%# make it so only the owner has access to these features %>
      <%# <%= link_to "Edit", edit_car_path(car) %>
      <%# <%= button_to "Delete", car, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
  </ul>
</div>
