<h1>My bookings</h1>

<ul>
  <% @bookings.each do |booking| %>
    <li>
      <strong>Car Name:</strong> <%= booking.car.name %><br>
      <strong>Renter:</strong> <%= booking.user.email %><br>
      <strong>Start Date:</strong> <%= booking.start_date %><br>
      <strong>End Date:</strong> <%= booking.end_date %><br>
      <% if current_user == booking.car.user && booking.status != "confirmed" %>
        <%= link_to "Accept Booking", accept_booking_path(booking), class: "btn btn-primary" %>
        <%= link_to "Decline Booking", decline_booking_path(booking), class: "btn btn-danger" %>




      <% end %>
    </li>
  <% end %>
</ul>
